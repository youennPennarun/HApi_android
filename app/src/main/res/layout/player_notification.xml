<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageView
            android:id="@+id/player_notif_cover"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:scaleType="centerCrop"
            android:src="@drawable/album_default"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/player_notif_trackData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/player_notif_trackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="loooooooooooooooooooooooooooooooogloooooooooooooooooooooooooooooooog"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/player_notif_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/player_notif_previous"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.1"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_previous"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/player_notif_play"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_play"
            android:textColor="#000000" />
        <ImageButton
            android:id="@+id/player_notif_pause"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.15"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_pause"
            android:textColor="#000000"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/player_notif_next"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.1"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_next"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>