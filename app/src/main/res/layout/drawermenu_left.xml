<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawermenu_left"
    style="@style/leftBehindMenuScroll" >

    <LinearLayout
        style="@style/behindMenuScrollContent"
        android:paddingTop="25dp" >

        <LinearLayout
            android:id="@+id/menu_goto_alarms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/actionbar_alarm_img"
                android:background="@null"
              	android:layout_height="30dp"
              	android:layout_width="30dp"
              	android:scaleType="fitXY"
                android:src="@drawable/alarm" />

            <TextView
                android:id="@+id/menu_text_alarm"
                style="@style/behindMenuItemTitle"
                android:layout_height="wrap_content"
                android:text="Alarms" />

        </LinearLayout>
        <View style="@style/Divider"/>
        <LinearLayout
            android:id="@+id/menu_goto_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/actionbar_search_img"
                android:background="@null"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_search" />

            <TextView
                android:id="@+id/menu_text_search"
                style="@style/behindMenuItemTitle"
                android:layout_height="wrap_content"
                android:text="Search" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_goto_playlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/actionbar_playlist_img"
                android:background="@null"
              	android:layout_height="30dp"
              	android:layout_width="30dp"
              	android:scaleType="fitXY"
                android:src="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/menu_text_playlist"
                style="@style/behindMenuItemTitle"
                android:layout_height="wrap_content"
                android:text="Playlists" />
        </LinearLayout>
        <View style="@style/Divider"/>
        <LinearLayout
            android:id="@+id/menu_goto_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/actionbar_settings_img"
                android:background="@null"
              	android:layout_height="30dp"
              	android:layout_width="30dp"
              	android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_preferences" />

            <TextView
                android:id="@+id/menu_goto_settings_text"
                style="@style/behindMenuItemTitle"
                android:text="Settings" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>