<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artistDetail_scrollview"
    style="@layout/alarm_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#e9e9e9" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <com.example.hapi.widgets.ExpandableListView
            android:id="@+id/artistDetail_popularList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="#0000CC"
            android:dividerHeight="0dp" >
        </com.example.hapi.widgets.ExpandableListView>

        <com.example.hapi.widgets.ExpandableGridView
            android:id="@+id/artistDetail_albumList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="15dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="15dp" >
        </com.example.hapi.widgets.ExpandableGridView>
    </LinearLayout>

</ScrollView>